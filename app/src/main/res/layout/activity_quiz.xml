<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_blue"
    tools:context=".QuizActivity">

    <!-- Header TextView -->
    <TextView
        android:id="@+id/quiz_title"
        android:layout_width="wrap_content"
        android:fontFamily="cursive"
        android:layout_height="wrap_content"
        android:text="Financial Literacy Quiz"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Question TextView -->
    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is a budget?"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/quiz_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Option 1 RadioButton -->
    <RadioButton
        android:id="@+id/option_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A plan for managing income and expenses."
        android:textSize="16sp"
        android:textColor="@color/fnb_black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/question_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Option 2 RadioButton -->
    <RadioButton
        android:id="@+id/option_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A type of bank account."
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/fnb_black"
        app:layout_constraintTop_toBottomOf="@+id/option_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Option 3 RadioButton -->
    <RadioButton
        android:id="@+id/option_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A savings account with high interest."
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/fnb_black"
        app:layout_constraintTop_toBottomOf="@+id/option_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Option 4 RadioButton -->
    <RadioButton
        android:id="@+id/option_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A type of investment."
        android:textSize="16sp"
        android:textColor="@color/fnb_black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/option_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/option_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

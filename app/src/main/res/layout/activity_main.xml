<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Welcome Statement -->
    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, [User's Name]!"
        android:fontFamily="cursive"
        android:textColor="@color/fnb_blue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <GridLayout
        android:id="@+id/button_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="3"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/welcome_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp">
        <LinearLayout
            android:layout_width="189dp"
            android:layout_height="237dp"
            android:orientation="vertical"
            android:background="@drawable/border_blue"
            android:padding="25dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sales"

            android:contentDescription="Button 1"
            android:scaleType="centerCrop"
            android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sales"
                android:textColor="@color/fnb_black"
                android:textSize="14sp"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Know where to shop before \n heading out, shop smart!"
                android:textColor="@color/fnb_blue"
                android:textSize="11sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Image Button 2 -->
        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="237dp"
            android:orientation="vertical"
            android:padding="25dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/border_blue"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            tools:ignore="ExtraText">

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/finance"
                android:contentDescription="Button 2"
                android:scaleType="centerCrop"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Financial Literacy"
                android:textColor="@color/fnb_black"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn basics of finance...\n know your wants\n and needs."
                android:textColor="@color/fnb_blue"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Image Button 3 -->
        <LinearLayout
            android:layout_width="188dp"
            android:layout_height="230dp"
            android:orientation="vertical"
            android:background="@drawable/border_blue"
            android:padding="25dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/tips"
                android:contentDescription="Button 3"
                android:scaleType="centerCrop"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tips"
                android:textColor="@color/fnb_black"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here are awesome tips \nfor you not to overspend."
                android:textColor="@color/fnb_blue"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Image Button 4 -->
        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="230dp"
            android:orientation="vertical"
            android:layout_marginLeft="0dp"
            android:background="@drawable/border_blue"
            android:padding="25dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ads"
                android:contentDescription="Button 4"
                android:scaleType="centerCrop"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watch Ads"
                android:textColor="@color/fnb_black"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bored? Watch ads for\n vouchers at one of our \n partnering stores."
                android:textColor="@color/fnb_blue"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Image Button 5 -->
        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:background="@drawable/border_blue"
            android:gravity="center">

            <ImageButton
                android:id="@+id/button5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/vouchers"

                android:contentDescription="Button 5"
                android:scaleType="centerCrop"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Vouchers"
                android:textColor="@color/fnb_black"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vouchers Earned from \nwatching ads."
                android:textColor="@color/fnb_blue"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
